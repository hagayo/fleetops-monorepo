{
  "name": "@fleetops/api-gateway",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "predev": "pnpm -r --filter @fleetops/types --filter @fleetops/event-bus --filter @fleetops/robot-registry --filter @fleetops/mission-orchestrator build",
    "dev": "cross-env PORT=4330 tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "cross-env PORT=4330 node dist/index.js",
    "check": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint ."
  },
  "dependencies": {
    "@fleetops/event-bus": "workspace:^",
    "@fleetops/mission-orchestrator": "workspace:^",
    "@fleetops/robot-registry": "workspace:^",
    "@fleetops/types": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "morgan": "^1.10.0",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.10",
    "cross-env": "^10.0.0",
    "tsx": "^4.16.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.0"
  }
}
