* text=auto

# Enforce LF for source files
*.js   text eol=lf
*.mjs  text eol=lf
*.cjs  text eol=lf
*.ts   text eol=lf
*.tsx  text eol=lf
*.json text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.md   text eol=lf
*.css  text eol=lf

# Windows scripts may prefer CRLF
*.bat  text eol=crlf
*.cmd  text eol=crlf

# Binary
*.png  binary
*.jpg  binary
*.jpeg binary
*.gif  binary
*.ico  binary
*.zip  binary
